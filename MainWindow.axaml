<Window xmlns="https://github.com/avaloniaui" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Flux.MainWindow"
        Title="Flux â€” WoW Addon Tester"
        Width="1000" Height="700">
  <Grid RowDefinitions="Auto,*,200" ColumnDefinitions="250,*,300">
    <Border Grid.ColumnSpan="3" Background="#0B0B0B" Padding="10">
      <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
          <Image Name="LogoImage" Width="40" Height="40" Stretch="Uniform" Margin="0,0,10,0"/>
          <TextBlock Name="LogoText" VerticalAlignment="Center" Foreground="#FFF" FontSize="18" FontWeight="Bold">Flux</TextBlock>
          <TextBlock VerticalAlignment="Center" Foreground="#BBB" FontSize="12" Margin="8,4,0,0">WoW Addon Tester</TextBlock>
        </StackPanel>

        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Spacing="6">
          <Button Name="RunButton" Content="âµ" Width="36" Height="36" Background="#1E88E5" Foreground="#FFF" BorderBrush="#155FA3"/>
          <Button Name="StopButton" Content="â– " Width="36" Height="36" Background="#D32F2F" Foreground="#FFF" BorderBrush="#B71C1C"/>
          <Button Name="ReloadButton" Content="â†»" Width="36" Height="36" Background="#6A1B9A" Foreground="#FFF" BorderBrush="#4A0E68"/>
          <Button Name="OpenButton" Content="ðŸ“‚" Width="36" Height="36" Background="#455A64" Foreground="#FFF" BorderBrush="#2C3E43"/>
          <Button Name="SettingsButton" Content="âš™" Width="36" Height="36" Background="#37474F" Foreground="#FFF" BorderBrush="#222"/>
        </StackPanel>
      </DockPanel>
    </Border>

    <StackPanel Grid.Row="1" Grid.Column="0" Margin="8">
      <TextBlock Text="Workspace" FontWeight="Bold"/>
      <Button Name="LoadAddonButton" Content="Load Addon..." Margin="0,6,0,0"/>
      <Button Name="OpenSampleButton" Content="Run Sample Addon" Margin="0,6,0,0"/>

      <Separator Margin="0,12,0,6"/>
      <TextBlock Text="Workspace Explorer" FontWeight="Bold" Margin="0,12,0,0"/>
      <ListBox Name="WorkspaceList" Margin="0,6,0,0" Height="240"/>
      <Button Name="RefreshWorkspaceButton" Content="Refresh Explorer" Margin="0,6,0,0"/>
      <TextBlock Text="Event Simulator" FontWeight="Bold"/>
      <ComboBox Name="EventCombo" Margin="0,6,0,0" SelectedIndex="0">
        <ComboBoxItem>PLAYER_LOGIN</ComboBoxItem>
        <ComboBoxItem>PLAYER_LOGOUT</ComboBoxItem>
        <ComboBoxItem>PLAYER_ENTERING_WORLD</ComboBoxItem>
        <ComboBoxItem>UNIT_HEALTH</ComboBoxItem>
        <ComboBoxItem>COMBAT_LOG_EVENT_UNFILTERED</ComboBoxItem>
      </ComboBox>
      <Button Name="FireEventButton" Content="Fire Selected Event" Margin="0,6,0,0"/>

      <TextBlock Text="Custom Event" Margin="0,10,0,0"/>
      <TextBox Name="CustomEventText" Margin="0,6,0,0" Watermark="EVENT_NAME"/>
      <TextBlock Text="Event Args (optional)" Margin="0,8,0,0"/>
      <TextBox Name="Arg1Text" Margin="0,6,0,0" Watermark="arg1 (string/number/bool)"/>
      <TextBox Name="Arg2Text" Margin="0,6,0,0" Watermark="arg2 (string/number/bool)"/>
      <TextBox Name="Arg3Text" Margin="0,6,0,0" Watermark="arg3 (string/number/bool)"/>
      <Button Name="FireCustomButton" Content="Fire Custom Event" Margin="0,6,0,0"/>
    </StackPanel>

    <Border Grid.Column="1" Grid.Row="1" Margin="8" Background="#FFF">
      <Canvas Name="PreviewCanvas" Background="#FFF"/>
    </Border>

    <Border Grid.Column="2" Grid.Row="1" Margin="8" Background="#111" CornerRadius="4">
      <StackPanel Margin="8">
        <TextBlock Text="Frame Inspector" FontWeight="Bold" Foreground="#FFF"/>
        <TextBlock Text="Selected ID" Margin="0,8,0,0" Foreground="#DDD"/>
        <TextBox Name="InspectorId" IsReadOnly="True"/>
        <TextBlock Text="X" Margin="0,8,0,0" Foreground="#DDD"/>
        <TextBox Name="InspectorX"/>
        <TextBlock Text="Y" Margin="0,8,0,0" Foreground="#DDD"/>
        <TextBox Name="InspectorY"/>
        <TextBlock Text="Width" Margin="0,8,0,0" Foreground="#DDD"/>
        <TextBox Name="InspectorW"/>
        <TextBlock Text="Height" Margin="0,8,0,0" Foreground="#DDD"/>
        <TextBox Name="InspectorH"/>
        <CheckBox Name="InspectorVisible" Content="Visible" Foreground="#DDD" Margin="0,8,0,0"/>
        <Button Name="InspectorApply" Content="Apply" Margin="0,12,0,0"/>
      </StackPanel>
    </Border>

    <Border Grid.Row="2" Grid.ColumnSpan="3" Margin="8" Background="#111" CornerRadius="4">
      <TextBox Name="ConsoleTextBox" Margin="6" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" Foreground="#EEE" Background="#111" BorderThickness="0"/>
    </Border>
  </Grid>
</Window>
